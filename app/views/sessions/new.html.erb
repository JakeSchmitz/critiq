<h2>Sign In</h2>

<div class="row">
	<div class="span6 offset1">
		<%= form_for(:session, url: signin_path) do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
	<div class="span6">
		<p>Not a member of Critiq yet? <%= link_to "Sign Up For Critiq!", signup_path %></p>
	</div>
</div>