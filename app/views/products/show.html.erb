<%- model_class = Product -%>
<div class="container" style="padding-top: 50px">
  <div class="row">
    <div class="span2 offset1">
      <% if !@product.pictures.empty? %>
        <%= image_tag @product.product_pic.attachment.url(:medium) %>
      <% else %>
        <h2>Sorry no image</h2>
        <%= image_tag "/images/missing-image.jpg" %>
      <% end %> 
      </br><h2 style="float: left;"><%=t '.title', :default => @product.name %></h2>
    </div>
    <div class="span6 offset1 user-info" style="padding-top: 75px">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @product.name %> </dd>
        <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
        <dd><%= @product.description %></dd>
      </dl>
    </div>
  </div>

  <%= render :partial => 'product_features' %>
  <%= render :partial => 'product_comments' %>

  <div class="span5 offset3">
    <div class="form-actions" >
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  products_path, :class => 'btn'  %>
      <% if signed_in? and current_user.id == @product.user_id %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_product_path(@product), :class => 'btn' %>
        <%= link_to t('.new_feature', :default => t("helpers.links.new_feature")),
                  new_product_feature_path(@product), :class => 'btn' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  product_path(@product),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
      <% else %>
        <%= link_to t('.new_comment', :default => t("helpers.links.new_product_comment")),
                  new_product_comment_path(@product), :class => 'btn' %>
      <% end %>
    </div>
  </div>
</div>