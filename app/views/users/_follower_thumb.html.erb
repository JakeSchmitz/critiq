<div class="follower-thumb">
	<a href="/users/<%= user.id %>">
		<% if user.has_pics? %> 
			<div class="follower-pic" style="background-image: url('<%= user.profile_pic.attachment.url(:thumb) %>');"></div>
		<% else %>
			<div class="follower-pic" style="background-image: url('/images/missing-user-avatar.png');"></div>
		<% end %>
	</a>
	<div class="follower-info">
		<div class="info-top">
			<a href="/users/<%= user.id %>"><p style="font-weight: bold"><%= user.name %></p></a>
		</div>
		<div class="info-bottom">
			<p><i class="fa fa-users fa-lg"></i> <%= user.lovers.to_s %> followers</p>
		</div>
	</div>
	<div class="rating-box">
		<div class="upper-rating">
			<h6>Karma</h6>
			<h5><%= user.swagger.to_s %></h5>
		</div>
		<div class="lower-rating">
			<p><%= user.products.length.to_s %> Creations</p>
		</div>
	</div>
</div>