<div class="btn-group">
   <%= link_to 'New Feature', new_product_feature_path(:product_id => @product.id), :class => 'btn btn-info' %>
  <%= link_to t("Edit Idea", :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn btn-warning' %>
  <%= link_to t("Delete Forever", :default => t("helpers.links.destroy")),
              user_path(@btn),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>