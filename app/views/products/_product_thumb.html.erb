<div class="thumbnail span3 product-thumb" style="text-align: center; height: 300px;">
	<% if !product.pictures.empty? %>
		<a href="#product-modal<%= product.id.to_s %>" data-toggle="modal">
			<%= image_tag product.product_pic.attachment.url(:large), :class => 'img-rounded', :style => 'width: 100%; overflow: hidden; padding: 0px;' %>
		</a>
		</br>
		<h4><%= link_to product.name, product %></h4>
		<% if signed_in? and !product.likes.exists?(:user_id => current_user.id) %>
			<%= link_to 'Show Love',
							product_love_path(product.id), class: "btn btn-success" %>
		<% else %>
			<p>Rating: <%= product.rating.to_s %></p>
		<% end %>
	<% end %>
</div>