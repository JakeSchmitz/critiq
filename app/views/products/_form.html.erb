<%= nested_form_for @product, :html => { :class => 'form-horizontal', :multipart => true, style: 'text-align: center;' } do |f| %>
  <h4>Project Name</h4>
  <%= f.text_field :name, :class => 'text_field', style: 'min-width: 250px; margin-bottom: 10px;' %>
  <div class="jquery-product-image-upload">
    <%= render :partial => 'jquery_image_uploader' %>
  </div>
  <h4>Description</h4>
  <%= f.text_area :description, maxlength: 1000, :class => 'text_field', style: 'height: 200px; min-width: 250px;' %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
