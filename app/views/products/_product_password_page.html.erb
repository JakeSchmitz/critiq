<div class="container product-password">
	<%= form_for @product, url: product_access_path(@product), method: :get do |f| %>
		<div class="inline-form">
			<h3 style="color: #fff;">This is a private Feedback Drive</h3>
			<h3 style="color: #fff;">Enter the passcode issued by <%= @product.user.name %></h3>
			<%= f.text_field :password, placeholder: 'Special Passcode' %>
			<%= f.submit 'ACCESS', :class => 'btn btn-primary' %>
		</div>
	<% end %>
</div>