<div class="thumbnail feature-thumb" style="background-color: #fff;">
	<% if !feature.pictures.empty? %>
		<div class="thumb-ratio" style="background-image: url(<%= asset_path feature.pictures.last.attachment.url(:large) %>);"></div>
	<% end %>
	<% if signed_in? and !vote %>
		<!-- signed in user has already voted, so add overlay -->

	<% end %>
	<div class="feature-thumb-content" <% if !vote %>style="padding-bottom: 10px;"<% end %>>
		<h4><%= link_to feature.name, product_feature_group_feature_path(:id => feature.id, :product_id => @product.id, :feature_group_id => feature.feature_group_id) %></h4>
		<div class="feature-thumb-description">
			<p style="line-height: 1.2;"><%= truncate feature.description, length: 60 %></p> 
		</div>
	</div>
	<div class="feature-thumb-functions">
		<div class="functions-left">
		<% if vote %>
			<div>
				<%= link_to 'Votes: ' + feature.upvotes.length.to_s ,
								product_feature_group_feature_upvote_path(:product_id => @product.id, :feature_id => feature.id, :feature_group_id => feature.feature_group_id), class: "btn-clear", style: 'color: #616161; border-color: #535353;' %>
			</div>
		<% elsif signed_in? %>
			<% if feature.upvotes.includes(:user_id => current_user.id) %>
				<i class="fa fa-check-square-o fa-lg" style="color: #fff;"></i> 
			<% else %>
				<i class="fa fa-square-o"></i>
			<% end %>
		<% end %>	
		</div>
		<div class="functions-right">
			<p style="text-align: center; color: #fff;"><%= feature.upvotes.size  %> Votes</p>
		</div>
	</div>
</div>