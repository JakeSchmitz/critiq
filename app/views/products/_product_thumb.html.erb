<div class="thumbnail product-thumb" style="text-align: center;">
	<a href="/products/<%= product.id %>" data-toggle="modal">
		<div class="thumb-ratio" style="background-image: url('<%= product.profile_pic_url %>');"></div>
	</a>
	<% if current_user?(product.user) %>
		<div class="active-button">
			<a href="/products/<%= product.id %>/active_switch">
				<% if product.active %>
					<i class="fa fa-unlock fa-lg"></i>
				<% else %>
					<i class="fa fa-lock fa-lg"></i>
				<% end %>
			</a>
		</div>
	<% end %>
	<div class="view-button">
		<a href="/products/<%= product.id %>">
			<div class="btn-clear">
				<h4>VIEW</h4>
			</div>
		</a>
	</div>
	<div class="product-thumb-content">
		<h4><%= link_to product.name, product %></h4>
		<div class="product-thumb-description">
			<p style="line-height: 1.1;" class="product-text"><%= truncate product.description, length: 140 %></p> 
		</div>
	</div>
	<div class="thumb-functions" style="padding-left: 12px;">
		<h5 style="display: inline; float: left; padding-right: 10px; color: #fff; margin-top: 10px"><i class="fa fa-comment fa-lg"></i> <%= product.comments.size %></h5>
		<h5 style="display: inline; float: left; color: #fff; margin-top: 10px;"><i class="fa fa-heart fa-lg" style="margin-top: 2px;"></i> <%= product.followers.size %></h5>
		<a href="/users/<%= product.user_id %>"><div class="tiny-thumb-ratio pull-right" style="background-image: url('<%= asset_path product.user.profile_pic_url(:thumb) %>'); background-size: cover;"></div></a>
	</div>
</div>
