<% if @user.id == current_user.id %>
  <div class="user-image-upload">
    <%= form_for(@pictures.build, :url => new_user_picture_path(:user_id => @user.id)) do |pic| %>
      <% if pic.object.new_record? %> 
        <div class="control-group">
          <%= pic.label "Add Image", :class => 'control-label pull-left' %>
          <div class="controls btn file_upload_wrapper"  style="float: left; display: inline">
            <%= pic.file_field :attachment  %>
          </div>
        </div>  
      <% end %>
      <div class="form-actions">
        <%= pic.submit "Upload Picture", :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>