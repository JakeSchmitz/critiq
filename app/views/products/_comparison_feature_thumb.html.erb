<!-- requires local param comp_feature -->
<div class="comparison-feature-callout">
	<div class="comparison-header">
		<h3 style="text-align: center;"><%= comp_feature.name %></h3>
		<p><%= comp_feature.description %></p>
			<% if signed_in? and current_user.id == @product.user_id %>
				<button class="btn btn-primary" data-toggle="modal" data-target="#newFeatureModalGroup<%= comp_feature.id %>">
				  Add Version
				</button>

			<% end %>
	</div>
	<ul class="thumbnails" style="display: inline-block;">
		<% comp_feature.features.each do |cf| %>
			<li class="thumnail">
				<div class="comp-feature">
					<%= render :partial => 'feature_thumb', locals: { feature: cf, vote: comp_feature.can_user_vote(current_user) } %>
				</div>
			</li>
		<% end %> 	
	</ul>
</div>