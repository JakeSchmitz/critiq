<div class="feature-callout container" style="position: relative; margin-top: 150px; height: 100%;">

	 <div class="row">
    <% if !@feature.pictures.empty? %>
      <%= image_tag @feature.pictures.first.attachment.url(:thumb) %>
    <% else %>
      <h2>Sorry no image</h2>
      <%= image_tag "/images/missing-image.jpg" %>
    <% end %> 
  </div>

	<p>
	  <strong>Name:</strong>
	  <%= @feature.name %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @feature.description %>
	</p>
	<div class="btn-group" >
		<%= link_to 'Votes: ' + @feature.upvotes.length.to_s ,
							product_feature_group_feature_upvote_path(:product_id => @product.id, :feature_id => @feature.id), class: "btn btn-success" %>
	</div>
</div>
<%= link_to 'Edit', edit_product_feature_group_feature_path(:id => @feature.id) %> |
<%= link_to 'Back', product_path %>
