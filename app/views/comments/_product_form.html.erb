<div class="comment-box">
  <%= nested_form_for [@product, @comment], html: {id: 'comment_submit' + thread_id, remote: true} do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
        <ul>
        <% @product.comments.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="comment-form">
      <%= f.text_area :body, :placeholder => "Enter a Critiq Here", :maxlength => 1000, style: ' min-height: 100px; min-width: 70%; width: 600px; border-radius: 0px;' %>
    </div>
    <div class="actions">
      <%= f.submit nil, :class => 'btn btn-primary pull-right', :name => "tab[#{tab}]" %>
    </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $('#comment_submit<%= thread_id.to_s %>')
      .bind("ajax:beforeSend", function(evt, xhr, settings){
        console.log('attempting to create comment');
      }).bind("ajax:complete", function(evt, data, status, xhr) {
        console.log('successfully created comment');
        $('#thread_id<%= thread_id.to_s %>').prepend(data.responseText);
        $('#comment_body').val('');
      });
  });
</script>