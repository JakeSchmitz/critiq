<div class="modal fade feature-modal" id="newFeatureModalGroup<%= feature_group.id %>" tabindex="-1" role="dialog" aria-labelledby="newFeatureModalGroup<%= feature_group.id %>Label" aria-hidden="true">
	<button type="button" class="close" data-dismiss="modal" area-hidden="true" style="padding-right: 10px">x</button>
	<div class="modal-body" style="max-height: 90%;">
		<div class="row" style="margin-bottom: 20px;">
			<div class="form-indicators" style="margin-right: -3px;">
				<!-- note reverse class names to switch colors -->
				<button data-toggle="modal" data-target="#newFeatureModal" onclick="$('#newFeatureModalGroup<%= feature_group.id %>').modal('hide');" style="padding: 0px; border: none;"> 
					<div class="set-up" style="width: 120px;">
						<p>CATEGORY <i class="fa fa-check"></i></p>
					</div>
				</button>
				<div class="category" style="margin-left: -3px;">
					<p>SET UP</p>
				</div>
			</div>
		</div>
		<div>
			<%= nested_form_for [product, feature_group, feature], :html => { :'data-type' => 'json', :class => 'form-horizontal', :remote => true,  :style => 'width: 100%;  margin-right: -30px;', :id => 'feature_create_form' + feature_group.id.to_s } do |f| %>
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			  <% if feature.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(feature.errors.count, "error") %> prohibited this feature from being saved:</h2>
			      <ul>
			      <% feature.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			  <div style="display: inline-block; width: 90%; text-align: center;">
		      <div class="well form-well">
		      	<div class="control-group">
					    <%= f.label :name, :class => 'control-label' %>
					    <div class="controls">
					      <%= f.text_field :name, :class => 'text_field' %>
					    </div>
					  </div>
		      </div>
		      <div class="well form-well">
		      	<div class="control-group">
					    <%= f.label :description, :class => 'control-label' %>
					    <div class="controls">
					      <%= f.text_area :description, :class => 'text_area' %>
					    </div>
					  </div>
		      </div>
			    <div>
			      <%= f.fields_for feature.pictures.new(:product_id => product.id, user_id: current_user.id), html: { remote: true} do |picture| %>
			        <% if !picture.object.nil? and picture.object.new_record? %>
			          <div class="control-group well form-well">
			            <%= picture.label "Image (optional)", :class => 'control-label' %>
			            <div class="controls btn file_upload_wrapper" style="margin-left: -30px;">
			              <%= picture.file_field :attachment, name: 'feature[attachment]', class: 'file_field' %>
			            </div>
			          </div>  
			        <% end %>
			      <% end %>
			    </div>
			  </div>
			  <div class="actions" style="margin-top: 20px; height: 60px; padding-top: 15px; background-color: #794f85; width: 100%;">
			    <%= f.submit 'SAVE AND CONTINUE', :class => 'btn btn-primary btn-clear', id: 'sumbitFeature' + feature_group.id.to_s %>
			  </div>
			<% end %>
		</div>
	</div>
</div>

<script>
	$(document).ready(function(){
		console.log('binding ajax actions to single feature modal for group <%= feature_group.id %>');
		$('#feature_create_form<%= feature_group.id.to_s %>')
			.bind("ajax:beforeSend", function(evt, xhr, settings){
				// This is the submit button
				var $singleFeatureButton = $('submitFeature<%= feature_group.id.to_s %>');
				console.log('attempting to create single feature');
				// save its text
				$singleFeatureButton.data('origText', $(this).text());
				// replace text with SUBMITTING...
				$singleFeatureButton.text('SUBMITTING...');

			}).bind("ajax:complete", function(evt, xhr, status) {
				var $singleFeatureButton = $('submitFeature<%= feature_group.id.to_s %>');
				console.log('successfully created single feature');
				// Change text to complete
				$singleFeatureButton.text('SUBMITTED');
			});
	});
</script>
