<div class="feature-thumb span4">

	 <div class="row">
    <% if !@feature.pictures.empty? %>
      <%= image_tag @feature.pictures.first.attachment.url(:thumb) %>
    <% else %>
      <h2>Sorry no image</h2>
      <%= image_tag "/images/missing-image.jpg" %>
    <% end %> 
  </div>

	<p>
	  <strong>Name:</strong>
	  <%= @feature.name %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @feature.description %>
	</p>
	<div class="btn-group" >
		<%= link_to 'Yeah:  ' + @feature.upvotes.to_s ,
							feature_upvote_path(@feature), class: "btn btn-success" %>
		<%= link_to 'Meh:  ' + @feature.downvotes.to_s,
							feature_downvote_path(@feature), class: "btn btn-danger" %>
	</div>
</div>